<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9DCDF"
    tools:context=".view.FotografPaylasmaActivity">

    <EditText
        android:id="@+id/aciklamaText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="58dp"
        android:ems="10"
        android:hint="Açıklamanızı giriniz"
        android:inputType="textPersonName"
        android:textColor="#C051D3"
        app:layout_constraintBottom_toTopOf="@+id/paylas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/paylas"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="91dp"
        android:layout_marginBottom="89dp"
        android:backgroundTint="#4654A5"
        android:onClick="paylas"
        android:text="Paylaş"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/aciklamaText"
        app:layout_constraintTop_toBottomOf="@+id/aciklamaText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="353dp"
        android:layout_height="289dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="46dp"
        android:onClick="gorselSec"
        app:layout_constraintBottom_toTopOf="@+id/aciklamaText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fotografpaylas" />

</androidx.constraintlayout.widget.ConstraintLayout>